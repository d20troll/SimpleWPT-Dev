{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "defaultPalette": false,
      "palette": [
        {
          "slug": "brand-primary",
          "color": "#000000",
          "name": "Brand Primary"
        },
        {
          "slug": "brand-secondary",
          "color": "#444444",
          "name": "Brand Secondary"
        },
        {
          "slug": "surface-base",
          "color": "#ffffff",
          "name": "Surface Base"
        },
        {
          "slug": "surface-card",
          "color": "#f3f4f6",
          "name": "Surface Card"
        },
        {
          "slug": "text-main",
          "color": "#111111",
          "name": "Text Main"
        },
        {
          "slug": "text-muted",
          "color": "#666666",
          "name": "Text Muted"
        },
        {
          "slug": "state-error",
          "color": "#cc0000",
          "name": "State Error"
        }
      ]
    },
    "typography": {
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Small"
        },
        {
          "slug": "normal",
          "size": "1rem",
          "name": "Normal"
        },
        {
          "slug": "medium",
          "size": "1.25rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.75rem",
          "name": "Large"
        },
        {
          "slug": "xl",
          "size": "2.5rem",
          "name": "Extra Large"
        }
      ]
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    }
  }
}
